# Virtual Literature Companion Environment Variables

# Core Settings
DEBUG=false
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# LLM Configuration
LLM_PROVIDER=openai  # or "anthropic"
LLM_MODEL=gpt-4-turbo-preview  # or "claude-3-opus-20240229"
LLM_TEMPERATURE=0.8
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Honcho Configuration
HONCHO_API_KEY=your_honcho_api_key_here

# Image Generation
IMAGE_PROVIDER=dalle3  # or "stability", "midjourney"
STABILITY_API_KEY=your_stability_api_key_here

# Voice Synthesis
VOICE_PROVIDER=elevenlabs  # or "azure", "google"
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here

# Vector Database
VECTOR_DB_PROVIDER=chromadb  # or "pinecone", "weaviate"
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
WEAVIATE_URL=your_weaviate_url_here
WEAVIATE_API_KEY=your_weaviate_api_key_here

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (for user management, optional)
DATABASE_URL=postgresql://user:password@localhost/virtual_literature_companion

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here

# Redis (for caching, optional)
REDIS_URL=redis://localhost:6379/0

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# File Storage
UPLOAD_PATH=./data/uploads
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes

# Session Management
SESSION_LIFETIME_HOURS=24
MAX_SESSIONS_PER_USER=10

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # 1 hour in seconds

# Feature Flags
ENABLE_IMAGE_GENERATION=true
ENABLE_VOICE_SYNTHESIS=true
ENABLE_MUSIC_GENERATION=true
ENABLE_ANALYTICS=false