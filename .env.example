# Virtual Literature Companion Configuration
# Copy this file to .env and fill in your API keys

# API Keys (Required)
OPENAI_API_KEY=your_openai_api_key_here
# Or use Anthropic instead:
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Voice Synthesis (Required for voice features)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Memory System (Optional but recommended)
HONCHO_API_KEY=your_honcho_api_key_here
HONCHO_BASE_URL=https://api.honcho.dev
HONCHO_APP_ID=literature-companion

# Model Configuration
LLM_MODEL=gpt-4-turbo-preview
# Options: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo, claude-3-opus, claude-3-sonnet
LLM_TEMPERATURE=0.7
MAX_TOKENS=2000

# Voice Configuration
VOICE_ID=21m00Tcm4TlvDq8ikWAM  # Rachel voice
# Find more voices at: https://elevenlabs.io/voice-library
VOICE_STABILITY=0.5
VOICE_SIMILARITY_BOOST=0.75
VOICE_STYLE=0.5

# Agent Configuration
SUPERVISOR_MAX_ITERATIONS=10
AGENT_TIMEOUT=300  # 5 minutes

# Memory Configuration
MEMORY_WINDOW_SIZE=10

# PDF Processing
MAX_PDF_PAGES=1000
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# File Paths (will be created automatically)
UPLOAD_DIR=./uploads
PROCESSED_DIR=./processed
VOICE_CACHE_DIR=./voice_cache

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Logging
LOG_LEVEL=INFO
# LOG_FILE=./logs/app.log  # Uncomment to enable file logging